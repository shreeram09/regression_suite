		{
			"name": "List Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"get single book\", () => {\r",
							"    const availableBooks = pm.response.json().filter(book => book.available === true);\r",
							"    const firstBook = availableBooks[0];\r",
							"    pm.test(\"Book found\", () => {\r",
							"        pm.expect(firstBook).to.be.an('object');\r",
							"        pm.expect(firstBook.available).to.be.true;\r",
							"        pm.expect(firstBook.available).to.eql(true);\r",
							"        // pm.expect(firstBook.type).to.eql(\"non-fiction\");\r",
							"    });\r",
							"\r",
							"    pm.globals.set(\"bookId\", firstBook.id);\r",
							"})"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books?limit=20",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "limit",
							"value": "20"
						},
